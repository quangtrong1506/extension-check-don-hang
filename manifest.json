{
    "manifest_version": 3,
    "name": "Giao Hàng Tiết kiệm",
    "description": "Quản lý đơn hàng giao hàng tiết kiệm",
    "version": "1.0.0",
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": "src/popup/logo.png"
    },
    "background": {
        "service_worker": "src/background/index.js"
    },
    "icons": {
        "128": "logo.png"
    },
    "host_permissions": ["*://*.stackoverflow.com/*", "*://stackoverflow.com/*"],
    "content_scripts": [
        {
            "js": ["src/scripts/index.js"],
            "matches": ["https://stackoverflow.com/*"]
        }
    ],
    "permissions": ["cookies", "storage", "contextMenus", "tabs", "activeTab"]
}
